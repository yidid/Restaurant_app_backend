#right-panel.right-panel
  //  Header
  header#header.header
    .top-left
      .navbar-header
        a.navbar-brand(href="./")
         h4 My restaurant
        a.navbar-brand.hidden(href="./")
         h4 My restaurant
        a#menuToggle.menutoggle
          i.fa.fa-bars
    .top-right
      .header-menu
        .header-left
          button.search-trigger
            i.fa.fa-search
          .form-inline
            form.search-form
              input.form-control.mr-sm-2(type="text", placeholder="Search ...", aria-label="Search")
              button.search-close(type="submit")
                i.fa.fa-close
          .dropdown.for-notification
            button.btn.btn-secondary.dropdown-toggle#notification(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              i.fa.fa-bell
              span.count.bg-danger 3
            .dropdown-menu(aria-labelledby="notification")
              p.red You have 3 Notification
              a.dropdown-item.media(href="#")
                i.fa.fa-check
                p Server #1 overloaded.
              a.dropdown-item.media(href="#")
                i.fa.fa-info
                p Server #2 overloaded.
              a.dropdown-item.media(href="#")
                i.fa.fa-warning
                p Server #3 overloaded.
       
        .user-area.dropdown.float-right
          a.dropdown-toggle.active(href="#", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
