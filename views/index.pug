  //  Header
  header#header.header
    .top-left
      .navbar-header
        a.navbar-brand(href="./")
          h5 My Restaurant App
        a.navbar-brand.hidden(href="./")
          
        a#menuToggle.menutoggle
          i.fa.fa-bars
    .top-right
      .header-menu
        .header-left
          button.search-trigger
            i.fa.fa-search
          .form-inline
            form.search-form
              input.form-control.mr-sm-2(type="text", placeholder="Search ...", aria-label="Search")
              button.search-close(type="submit")
                i.fa.fa-close
          .dropdown.for-notification
            button.btn.btn-secondary.dropdown-toggle#notification(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              i.fa.fa-bell
              span.count.bg-danger 3
            .dropdown-menu(aria-labelledby="notification")
              p.red You have 3 Notification
              a.dropdown-item.media(href="#")
                i.fa.fa-check
                p Server #1 overloaded.
              a.dropdown-item.media(href="#")
                i.fa.fa-info
                p Server #2 overloaded.
              a.dropdown-item.media(href="#")
                i.fa.fa-warning
                p Server #3 overloaded.
          .dropdown.for-message
            button.btn.btn-secondary.dropdown-toggle#message(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
              i.fa.fa-envelope
              span.count.bg-primary 4
            .dropdown-menu(aria-labelledby="message")
              p.red You have 4 Mails
              a.dropdown-item.media(href="#")
                span.photo.media-left
                  img(src="images/avatar/2.jpg")
                .message.media-body
                  span.name.float-left Jonathan Smith
                  span.time.float-right Just now
                  p Hello, this is an example msg
              a.dropdown-item.media(href="#")
                span.photo.media-left
                  img(alt="avatar", src="images/avatar/2.jpg")
                .message.media-body
                  span.name.float-left Jack Sanders
